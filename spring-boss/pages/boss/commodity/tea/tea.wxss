/* pages/commodity/commodity.wxss */
.title {
  font-size: 50rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
}
.view {
  height: 200rpx;
  width: 94%;
  margin: 10rpx auto;
  border: 1rpx solid #f1f1f1;
  display: flex;
  flex-direction: row;
}
.view image {
  width: 200rpx;
  height: 200rpx;
}
.tea_detail {
  display: flex;
  flex-direction: column;
  height: 200rpx;
  width: 60%;
  border: 1rpx solid #f1f1f1;
}
.detail {
  display: flex;
  flex: row;
}
.detail text {
  max-width: 60%;
  margin-left: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
} 
.tea_detail h2{
  margin-left: 30rpx;
  margin-top: 5rpx;
}

.join_update {
  line-height: 200rpx;
  margin: auto;
}

.liubai {
  height: 200rpx;
  width: 100%;
}
.shelves {
  box-shadow: 2px 2px 5px #09d309;
  background-color: #09d309;
  color: white;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
}
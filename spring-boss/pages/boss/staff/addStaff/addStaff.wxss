.title {
  font-size: 45rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
}
.view {
  font-size: 40rpx;
  display: flex;
  height: 70rpx;
  width: 80%;
  margin: 10rpx auto; 
  border: 1rpx solid #f0f0f0;
}
.type {
  width: 40%;
  line-height: 70rpx;
  box-shadow: 2px 2px 5px #d1d1d1;
}
.value {
  /* border: 1rpx #0ba30a solid; */
  border-left: 1rpx solid #f0f0f0; 
  height: 70rpx;
  line-height: 70rpx;
  box-shadow: 2px 2px 5px #d1d1d1;
  z-index: 99999;
}
.confirm {
  background-color: #0ba30a;
  color: white;
  margin-top: 150rpx;
  box-shadow: 2px 2px 5px #0ba30a;
}